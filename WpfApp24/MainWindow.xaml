<Window
    x:Class="WpfApp24.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp24"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800" Height="450"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}">
        <!--<Grid>-->
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            Width="100" Height="50"
            Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}"
            Content="{DynamicResource {x:Static SystemParameters.IconWidthKey}}" />
        <!--<Button Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">Abc</Button>-->

    </Grid>
</Window>
